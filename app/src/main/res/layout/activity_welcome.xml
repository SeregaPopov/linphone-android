<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey_color"
    android:layout_weight="1"
    android:orientation="vertical">


        <fragment
            android:id="@+id/status"
            android:name="org.linphone.fragments.StatusBarFragment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout="@layout/status_bar" />


        <include
            android:id="@+id/top_bar"
            layout="@layout/assistant_topbar"
            app:layout_constraintTop_toBottomOf="@+id/status" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:lineSpacingMultiplier="1.3"
        android:text="@string/assistant_welcome_text"
        android:textColor="#ffffff"
        android:textSize="26sp"
    />

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
        android:layout_weight="1"
            android:src="@drawable/xcall_brand" />

        <TextView
            android:id="@+id/termsOfUse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="center"
            android:layout_weight="1"
            android:lineSpacingMultiplier="2"
            android:linksClickable="true"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="@string/agree_terms_privacy"
            android:textColor="#ffffff"
            android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/btnWelcomeRates"
            style="@style/button_font"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginRight="10dp"

            android:background="@drawable/assistant_button"
            android:contentDescription="@string/assistant_login_generic"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/rates"
            android:textColor="@drawable/assistant_button_text_color"
        />

        <TextView
            android:id="@+id/btnWelcomeRegister"
            style="@style/button_font"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"


            android:background="@drawable/assistant_button"
            android:contentDescription="@string/assistant_login_generic"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/continue_text"
            android:textColor="@drawable/assistant_button_text_color" />
    </LinearLayout>




</LinearLayout>